# ============================================
# Configuración de pnpm
# ============================================

# Usar lockfile estricto
lockfile=true

# Auto-install peers
auto-install-peers=true

# Configuración de caché
store-dir=~/.pnpm-store

# Configuración de instalación
prefer-frozen-lockfile=true

# Configuración de resolución
resolution-mode=highest

# Configuración de logging
loglevel=warn

# Configuración de red
network-timeout=60000
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configuración de seguridad
strict-ssl=true

# Configuración de performance
side-effects-cache=true
side-effects-cache-readonly=false

 # Red y cache
network-timeout=120000
side-effects-cache=true
side-effects-cache-readonly=false

# Configuración óptima para Next.js + shadcn/ui + pnpm
shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true
prefer-frozen-lockfile=false

# Patrones específicos para los errores que ya viste
public-hoist-pattern[]=*@radix-ui/*
public-hoist-pattern[]=*lucide-react*
public-hoist-pattern[]=*react-hook-form*
public-hoist-pattern[]=*@hookform/*

# Patrones generales para UI/componentes
public-hoist-pattern[]=*ui*
public-hoist-pattern[]=*@mui/*
public-hoist-pattern[]=*@emotion/*
public-hoist-pattern[]=*@tanstack/*
public-hoist-pattern[]=*tailwind*
public-hoist-pattern[]=*class-*
public-hoist-pattern[]=*clsx*

# Patrones para TypeScript/ESLint (evita problemas de tipos)
public-hoist-pattern[]=*@types/*
public-hoist-pattern[]=*eslint*


# Configuración de workspace (si usas monorepo)
# link-workspace-packages=true
